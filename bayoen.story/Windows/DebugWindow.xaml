<windows:BaseWindow x:Class="bayoen.story.Windows.DebugWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:windows="clr-namespace:bayoen.story.Windows"
                                       
                    Title="Debug"                    
                    
                    Height="700" Width="700">

    <windows:BaseWindow.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MetroTextBlock}">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </windows:BaseWindow.Resources>

    <ScrollViewer>
        <Grid>
            <WrapPanel Orientation="Horizontal" Margin="12">
                <TextBlock x:Name="TextOut1"/>
                <TextBlock x:Name="TextOut2"/>
                <TextBlock x:Name="TextOut3"/>
            </WrapPanel>
        </Grid>
    </ScrollViewer>

</windows:BaseWindow>
